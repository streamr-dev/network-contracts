{
  "name": "@streamr/dev-chain-fast",
  "version": "0.1.0",
  "description": "Locally run Ethereum client for developing the Streamr services",
  "private": true,
  "files": ["dist", "Dockerfile"],
  "scripts": {
    "docker:buildLocalArch": "./prepare.sh && docker build -t streamr/dev-chain-fast:dev .",
    "docker:buildMultiArchAndPush": "./prepare.sh && docker buildx build --platform linux/amd64,linux/arm64 -t streamr/dev-chain-fast:dev --push .",
    "docker:buildStepOnly": "docker build -t streamr/dev-chain-fast:dev .",
    "preparebuild": "./prepare.sh",
    "deploy": "tsx src/deploy.ts",
    "clean": "rm -fr node_modules dist",
    "build": "tsc -p tsconfig.build.json"
  },
  "author": "Streamr Network AG",
  "license": "ISC",
  "dependencies": {
    "@streamr/hub-contracts": "file:../hub-contracts",
    "@streamr/network-contracts": "file:../network-contracts",
    "@dataunions/contracts": "^3.0.8",
    "hardhat": "^2.17.1"
  },
  "devDependencies": {
    "tsx": "^3.12.7",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  }
}
