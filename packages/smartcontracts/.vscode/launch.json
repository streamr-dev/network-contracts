{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch via NPM",
            "request": "launch",
            "runtimeArgs": [
                "run",
                "test"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Test All with Options",
            "program": "${workspaceFolder}/node_modules/ts-mocha/bin/ts-mocha",
            "args": [
                "${workspaceFolder}/test/*.test.ts",
                "--timeout",
                "200000"
            ],
            "skipFiles": [
                "<node_internals>/**/*.js"
            ]
        }
    ]
}