{
    "version": "0.2.0",
    "configurations": [
        {
            "command": "npm run e2etest",
            "name": "Run npm run e2etest",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "name": "Launch via NPM",
            "request": "launch",
            "runtimeArgs": [
                "run",
                "test"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "name": "deploy",
            "request": "launch",
            "runtimeArgs": [
                "run",
                "deploylive"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "name": "migrate",
            "request": "launch",
            "runtimeArgs": [
                "run",
                "migrateStreams"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "name": "cleanup",
            "request": "launch",
            "runtimeArgs": [
                "run",
                "cleanupStreams"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Test All with Options",
            "program": "${workspaceFolder}/node_modules/ts-mocha/bin/ts-mocha",
            "args": [
                "${workspaceFolder}/test/*.test.ts",
                "--timeout",
                "200000"
            ],
            "skipFiles": [
                "<node_internals>/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Hardhat test this file",
            "runtimeExecutable": "${workspaceFolder}/../../node_modules/.bin/hardhat",
            "env": {
                "DEBUG": "*,-mocha:*"
            },
            "runtimeArgs": [
                "test",
                "${file}"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "cwd": "${workspaceFolder}"
        }
    ]
}