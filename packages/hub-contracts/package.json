{
  "name": "@streamr-contracts/hub-contracts",
  "version": "1.0.0",
  "description": "Smart contracts for the Streamr multi-chain Hub",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/src/exports.js",
  "scripts": {
    "build": "rm -rf artifacts && hardhat compile && rm -rf dist && tsc -p tsconfig.build.json",
    "eslint": "eslint {src,scripts,test}/**/*.ts",
    "lint": "solhint contracts/**/*.sol",
    "test": "hardhat test test/contracts/*",
    "deploy": "hardhat run --network $CHAIN scripts/deployProjectRegistry.ts",
    "interact": "hardhat run --network $CHAIN scripts/interactProjectRegistry.ts",
    "upgrade": "hardhat run --network $CHAIN scripts/upgradeMarketplaceV3.ts"
  },
  "author": "Streamr Network AG",
  "license": "AGPL-3.0",
  "dependencies": {
    "@chainlink/contracts": "^0.4.2",
    "@hyperlane-xyz/core": "1.2.0",
    "@jridgewell/trace-mapping": "0.3.9",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.0",
    "@openzeppelin/contracts": "~4.4.2",
    "@openzeppelin/contracts-upgradeable": "4.8.0",
    "@streamr/network-contracts": "3.0.0",
    "@streamr/config": "^3.0.0",
    "@types/chai": "^4.3.0",
    "@types/debug": "^4.1.7",
    "@types/node": "^17.0.22",
    "@uniswap/v2-core": "^1.0.1",
    "@uniswap/v2-periphery": "^1.1.0-beta.0",
    "hardhat": "^2.9.1",
    "hardhat-dependency-compiler": "^1.1.3",
    "node-fetch": "2.6.6",
    "streamr-client": "^6.0.9",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.2"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "2.0.1",
    "@openzeppelin/hardhat-upgrades": "^1.18.3",
    "@types/jest": "^28.1.1",
    "@types/mocha": "^9.1.1",
    "mocha": "9.2.0",
    "solhint": "^3.3.7"
  }
}
