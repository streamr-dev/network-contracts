{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "streamr-nodejs"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": ["@typescript-eslint",  "chai-friendly"],
    "rules": {
        "quotes": ["error", "single"],
        "object-curly-spacing": ["error", "always"],
        "no-await-in-loop": "off",
        "no-plusplus": "off"
    },
    "settings": {
        "import/resolver": {
            "node": {
                "paths": ["src", "typechcain"]
            }
        }
    }
}
